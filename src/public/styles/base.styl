*
  margin 0
  padding 0
  box-sizing border-box

body
  font-family 'Open Sans', sans-serif

.base-vertical-center
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  &-b
    display table
    width inherit
    height inherit
  &-cont
    display table-cell
    vertical-align middle
    text-align center

.loading
  width 100%
  height 100%
  position absolute
  top 0
  left 0
  background-color rgba(255, 255, 255, 0.8)
  display none
  align-items center
  justify-content center
  text-align center
  font-size 14px
  font-weight 600
  z-index 99
  &.show
    display flex

.auth-res
  padding 40px 24px
  .error-b
  .info-b
    font-size 14px
    color $common-text
    display inline-block
    padding 0 8px 3px
    position relative
    cursor: pointer;
    text-align center
  .error-b
    display none
  &.error
    .info-b
      display none
    .error-b
      display block

clearfix()
  &:after
    content ""
    display block
    clear both
    visibility hidden